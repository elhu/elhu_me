<h2>Sign in</h2>

<%= form_for :session, :url => session_path do |form| %>
  <div class="text_field">
    <%= form.label :email %>
    <%= form.text_field :email, :type => "email" %>
  </div>
  <div class="text_field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="text_field">
    <%= form.label :oa_token, "OpenAuthenticator token" %>
    <%= form.text_field :oa_token %><br /> (if you don't know what 
    <%= link_to 'OpenAuthenticator', 'http://said.elhu.me', :target => :blank %> is, please leave blank)
  </div>
  <div class="submit_field">
    <%= form.submit "Sign in" %>
  </div>
<% end %>

<ul>
  <li>
    <%= link_to "Sign up", sign_up_path %>
  </li>
  <li>
    <%= link_to "Forgot password?", new_password_path %>
  </li>
</ul>
